<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppsFactoryTestTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_50</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_300</item>
        <item name="colorSecondaryVariant">@color/gray_500</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_50</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m" >true</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/white</item>
    </style>



    <style name="StyleButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/gray_700</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>
</resources>