<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppsFactoryTestTask" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_50</item>
        <item name="colorPrimaryVariant">@color/gray_200</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_600</item>
        <item name="colorSecondaryVariant">@color/gray_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gray_700</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/gray_700</item>
    </style>
    <style name="StyleButton" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/gray_500</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
    </style>

    <!--The following style was copied from the MaterialDesign Guidelines
        see: https://material.io/components/buttons/android#toggle-button-->
    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="strokeColor">@drawable/outlined_button_color_selector</item>
        <item name="iconTint">@drawable/outlined_button_color_selector</item>
    </style>
</resources>